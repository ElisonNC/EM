# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'EverydayMacros' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for EverydayMacros
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'Firebase/Core'
  pod 'Firebase/Firestore'

  target 'EverydayMacrosTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'EverydayMacrosUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
